%html
  %head
    %meta{charset: "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "The Middleman"
    = stylesheet_link_tag "all"
    = javascript_include_tag  "//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js", "all"
    = javascript_include_tag  "//use.typekit.net/vrq4dpy.js"
    %script(type="text/javascript") try{Typekit.load();}catch(e){}
  %body{class: page_classes}
    = yield
    .footer
      .container
        .row
          .sixteen.columns
            = link_to " ", "http://instagram.com/xjuiceboxx", class:"entypo-instagram"
            = link_to " ", "https://twitter.com/oregonjuice", class:"entypo-twitter"
            = link_to " ", "https://www.facebook.com/julian.fields.14", class:"entypo-facebook"
            = link_to " ", "https://github.com/julianfields", class:"entypo-github"
            = mail_to "oregonjuice@gmail.com","", class: "fi-mail", title: "contact julian"
            %p &copy; 2014 Julian Fields
